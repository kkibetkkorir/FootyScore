# .env
# App Configuration
VITE_APP_NAME=FootyScore
VITE_APP_SLOGAN=LiveScores
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=My awesome React app

# API & Backend
VITE_API_URL=https://api.example.com
VITE_API_KEY=your_api_key_here
VITE_GRAPHQL_URL=https://api.example.com/graphql
VITE_WS_URL=wss://api.example.com/ws

# Authentication
VITE_AUTH_DOMAIN=your-domain.auth0.com
VITE_AUTH_CLIENT_ID=your_auth0_client_id
VITE_AUTH_REDIRECT_URI=http://localhost:3000/callback
VITE_AUTH_AUDIENCE=your_api_audience

# Third Party Services
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io
VITE_ALGOLIA_APP_ID=your_algolia_app_id
VITE_ALGOLIA_API_KEY=your_algolia_api_key

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_PWA=true
VITE_ENABLE_MAINTENANCE=false



# Environment Specific
VITE_NODE_ENV=development
VITE_DEBUG=false
VITE_LOG_LEVEL=debug
VITE_BETTING_FREE=true

# External URLs
VITE_SUPPORT_EMAIL=support@example.com
VITE_DOCS_URL=https://docs.example.com
VITE_PRIVACY_POLICY_URL=https://example.com/privacy
VITE_TERMS_URL=https://example.com/terms

# Upload & Storage
VITE_UPLOAD_MAX_SIZE=5242880
VITE_S3_BUCKET=your-s3-bucket
VITE_CDN_URL=https://cdn.example.com

# Payment & Monetization
VITE_SUBSCRIPTION_PRICE=9.99
VITE_CURRENCY=USD
VITE_TAX_RATE=0.08

# Social & Marketing
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_TWITTER_HANDLE=your_twitter_handle
VITE_INSTAGRAM_HANDLE=your_instagram

# Localization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr
VITE_TIMEZONE=UTC
VITE_DEFAULT_CURRENCY=EUR
